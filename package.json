{
  "name": "planning-system",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "version": "0.0.0",
  "description": "planning system with analytics",
  "repository": "https://github.com/NGdre/planning-system.git",
  "license": "ISC",
  "author": "",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "build": "npm run build:core && npm run build:cli-adapter && npm run build:cli-app",
    "build:core": "npm run build -w @planning-system/core",
    "build:cli-adapter": "npm run build -w @planning-system/cli-adapter",
    "build:cli-app": "npm run build -w planning-system-cli",
    "dev": "npm run dev -ws",
    "clean": "rm -rf packages/*/dist",
    "migrate:make": "knex migrate:make --knexfile ./packages/cli-adapter/knexfile.js",
    "migrate:up": "knex migrate:latest --knexfile ./packages/cli-adapter/knexfile.js",
    "migrate:down": "knex migrate:rollback --knexfile ./packages/cli-adapter/knexfile.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.2.0",
    "prettier": "3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  }
}
